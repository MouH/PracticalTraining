<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>

	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<property name="connection.url">
		jdbc:mysql://localhost/vsts
	</property>
	<property name="connection.username">root</property>
	<property name="connection.password">123456</property>

	<!-- 方言 -->
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<!-- 其他信息 -->
	<property name="format_sql">true</property>
	<property name="show_sql">true</property>
	<property name="javax.persistence.validation.mode">none</property>


	<mapping resource="com/ambow/vsts/entity/User.hbm.xml" />
	<mapping resource="com/ambow/vsts/entity/Trade.hbm.xml" />
	<mapping resource="com/ambow/vsts/entity/Stock.hbm.xml" />
	<mapping resource="com/ambow/vsts/entity/Holding.hbm.xml" />
	<mapping resource="com/ambow/vsts/entity/TradeType.hbm.xml" />
	
	

</session-factory>


</hibernate-configuration>